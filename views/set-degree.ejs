<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
  <style>
    .contain {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .report-container {
      width: 600px;
    }

    .update-student label {
      margin-bottom: 10px;
      font-weight: bold;
    }

    .update-student input,
    .update-student select {
      width: 100%;
      padding: 10px;
      /* margin-bottom: 5px; */
      border-radius: 5px;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }
  </style>


  <body>
    <div class="contain">
      <div class="report-container">
        <div class="report-header">
          <h1 class="recent-Articles">set Degree</h1>
        </div>
        <div class="update-student">

          <label for="">year work</label>
          <input type="number" name="a3mal" id="a3mal">
          <br>
          <label for="">mid</label>
          <input type="number" name="mid" id="mid">
          <br>
          <label for="">practical</label>
          <input type="number" name="el3mli" id="el3mli">
          <br>
          <label for="">final</label>
          <input type="number" name="final" id="final">
          <br>
          <br>
          <button onclick="calc()" class="btn lonbtn">Calc degree</button>
          <br>
          <form action="/set-degree/<%= student._id %>/<%= course._id %>" method="post">
            <label for="total">
              total degree
            </label>
            <br>
            <input type="number" name="degree" id="total" required>
            <br>
            <br>
            <input type="submit" class="btn lonbtn">
          </form>
        </div>
      </div>
    </div>
  </body>


  <script>
    let total, a3mal, mid, el3mli, final;
    total = document.getElementById("total");
    a3mal = document.getElementById("a3mal");
    mid = document.getElementById("mid");
    el3mli = document.getElementById("el3mli");
    final = document.getElementById("final")
    function calc() {
      v = Number(a3mal.value) + Number(mid.value) + Number(el3mli.value) + Number(final.value);
      total.value = v;
    }

  </script>

</html>